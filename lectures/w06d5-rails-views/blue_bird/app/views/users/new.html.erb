
<!-- action: url or rails route to which we want to send our form data-->
<!-- method: http method or verb that we want to use and only accepts GET or POST -->

<!-- for: used in the label tag and must be the same as the input tag's id attribute -->
<!-- name: how the data is named when passed through and will point to value returned within params -->

<form action="<%=users_url %>" method="POST">

  <label for="username">Username</label>
  <input type="text" id="username" name="user[username]" value="<%= @user.username %>">

  <br>

  <label>Email:
  <input type="text" name="user[email]" value="<%= @user.email %>">
  </label>

  <br>

   <label>Age:
  <input type="text" name="user[age]" value="<%= @user.age %>">
  </label>

  <br>

   <label>Coding Affiliation:
  <input type="text" name="user[coding_affiliation]" value="<%= @user.coding_affiliation %>">
  </label>


  <input type="submit" value="Create User">


</form>